<!DOCTYPE html>
<html>
<head>
  <title>Caravan</title>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag "//maps.google.com/maps/api/js?v=3. 13&sensor=false&libraries=places" %>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <%= csrf_meta_tags %>
</head>
    <!-- Navigation -->
    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand page-scroll" href="#page-top">
                    <!-- <i class="fa fa-play-circle"></i> -->Caravan
                </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
                <ul class="nav navbar-nav">
                    <!-- Hidden li included to remove active class from about link when scrolled up past about section -->
                    <li class="hidden active">
                        <a href="#page-top"></a>
                    </li>
                    <li class="">
                        <a class="page-scroll" href="#about">About</a>
                    </li>
                    <li class="">
                        <a class="page-scroll" href="#get-started">Get Started</a>
                    </li>
                    <li class="">
                        <a class="page-scroll" href="#contact">Contact</a>
                    </li>
                    <% if current_user %>
                      <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_user.username.capitalize %> <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                          <li><a href="/profile">My Profile</a></li>
                          <li><a href="<%= inbox_path %>">My Inbox</a></li>
                          <li class="divider"></li>
                          <li><a href="/trips/new">New Trip</a></li>
                          <li><a href="/parcels/new">New Parcel</a></li>
                          <li><a href="/trips/search">New Search</a></li>
                          
                          <li class="divider"></li>
                          <li><a href="<%= signout_path %>">Sign out</a></li>
                        </ul>
                      </li>
                    <% else %>
                      <li>
                    <a href="#signup" data-toggle="modal" data-target=".bs-modal-sm">Sign In / Up</a>
                     </li>
                    <% end %>
                  </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

<!-- Modal -->
<div class="modal fade bs-modal-sm" id="myModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
        <br>
        <div class="bs-example bs-example-tabs">
            <ul id="myTab" class="nav nav-tabs">
              <li class="active signin-field"><a href="#signin" data-toggle="tab">Sign In</a></li>
              <li class=""><a href="#signup" data-toggle="tab">Register</a></li>
           <!--    <li class=""><a href="#why" data-toggle="tab">Why?</a></li> -->
            </ul>
        </div>
      <div class="modal-body">
        <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade active in" id="signin">
            <fieldset>
            <div class="control-group">
              <label class="control-label" for="userid">Username:</label>
              <div class="controls">
                <%= form_for :user, url: signin_path, :html => {:class => "form-horizontal"} do |f| %>
                <%= f.text_field :username, :class => 'input-medium form-control', :id =>"username"  %>
              </div>
            </div>

            <!-- Password input-->
            <div class="control-group">
              <label class="control-label password-field" for="passwordinput">Password:</label>
              <div class="controls">
                <%= f.password_field :password, :class => 'input-medium form-control' %>
              </div>
            </div>
            <!-- Button -->
            <div class="control-group">
              <label class="control-label" for="signin"></label>
              <div class="controls">
                <%= f.submit 'Login', :class => 'btn btn-default btn-success', :id => 'signin' %>
              </div>
            </div>
            </fieldset>
            <% end %>
        </div>


        <div class="tab-pane fade" id="signup">
            <fieldset>

            <!-- Text input-->
            <div class="control-group">
              <label class="control-label" for="userid">Username:</label>
              <div class="controls">
                <%= form_for :user, url: users_path do |f| %>
                <%= f.text_field :username, :class => 'input-medium form-control', :id =>"username"  %>
              </div>
            </div>

            <!-- Password input-->
            <div class="control-group">
              <label class="control-label" for="password">Password:</label>
              <div class="controls">
                <%= f.password_field :password, :class => 'input-medium form-control' %>
              </div>
            </div>

            <!-- Button -->
            <div class="control-group">
              <label class="control-label" for="confirmsignup"></label>
              <div class="controls">
                <%= f.submit 'Sign Up', :class => 'btn btn-success btn-default', :id => 'signin' %>
              </div>
            </div>
            </fieldset>
            <% end %>
      </div>
    </div>
      </div>
   </div>
  </div>
</div>


<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">
    <!-- Intro Header -->
    <header class="intro">
        <div class="intro-body">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <h1 class="brand-heading">Caravan</h1>
                        <p class="intro-text">Putting The People Back In Shipping<br></p>
                        <a href="#about" id="scroll-button" class="btn btn-circle page-scroll">
                            <i class="fa fa-angle-double-down animated"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- About Section -->
    <section id="about" class="container content-section text-center">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <h2>About Caravan</h2>
                <p>Caravan is a new way to ship your packages</p>
                <p>More Caravan Text</p>
                <a href="#get-started" id="inverse-scroll-button" class="btn btn-circle page-scroll inverse-button">
                            <i class="fa fa-angle-double-down animated"></i>
                        </a>
            </div>
        </div>
    </section>

    <section id="get-started" class="content-section text-center">
        <div class="download-section">
            <div class="container">
                <div class="col-lg-8 col-lg-offset-2">
                    <h2>Get Started</h2>

                    <%= form_tag trips_search_path, :method => :get do %>

                      <div class="col-lg-12">
                        <div class="col-lg-6 search-inline">
                          <%# render 'addresses/new_origin' %>
                          <div class="form-group">
                            <%= hidden_field_tag 'origin_address[street_address]', @origin_address ? @origin_address.street_address : ""%>
                          </div>
                          <div class="form-group">
                            <%= hidden_field_tag 'origin_address[secondary_address]', @origin_address ? @origin_address.secondary_address : ""%>
                          </div>
                          <div class="form-group">
                            <%= hidden_field_tag 'origin_address[description]', @origin_address ? @origin_address.description : "" %>
                          </div>
                          <div class="form-group">
                            <%= hidden_field_tag 'origin_address[city]', @origin_address ? @origin_address.city : "" %>
                          </div>
                          <div class="form-group">
                            <%= hidden_field_tag 'origin_address[state]', @origin_address ? @origin_address.state : "" %>
                          </div>
                          <div class="form-group">
                            <%= hidden_field_tag "origin_address[zip_code]", @origin_address ? @origin_address.zip_code : "" %>
                          </div>
                          <div class="form-group">
                            <%= hidden_field_tag 'origin_address[latitude]',@origin_address ? @origin_address.latitude : "" %>
                          </div>
                          <div class="form-group">
                            <%= hidden_field_tag 'origin_address[longitude]', @origin_address ? @origin_address.longitude : "" %>
                          </div>
                          <div class="gmap_search_bar form-group">
                            <%= text_field_tag 'origin_address[address_string]', @origin_address ? @origin_address.address_string : "", placeholder: "Origin" %>
                          </div>
                        </div>

                        <div class="col-lg-6 search-inline">
                          <div class="form-group">
                            <%= hidden_field_tag 'destination_address[street_address]', @destination_address ? @destination_address.street_address : "" %>
                          </div>
                          <div class="form-group">
                           <%= hidden_field_tag 'destination_address[secondary_address]', @destination_address ? @destination_address.secondary_address : "" %>
                          </div>
                          <div class="form-group">
                            <%= hidden_field_tag 'destination_address[city]', @destination_address ? @destination_address.city : "" %>
                          </div>
                          <div class="form-group">
                            <%= hidden_field_tag 'destination_address[state]', @destination_address ? @destination_address.state : "" %>
                          </div>
                          <div class="form-group">
                            <%= hidden_field_tag 'destination_address[zip_code]', @destination_address ? @destination_address.zip_code : "" %>
                          </div>
                          <div class="form-group">
                            <%= hidden_field_tag 'destination_address[latitude]',@destination_address ? @destination_address.latitude : "" %>
                          </div>
                          <div class="form-group">
                            <%= hidden_field_tag 'destination_address[longitude]', @destination_address ? @destination_address.longitude : "" %>
                          </div>
                          <div class="gmap_search_bar form-group">
                            <%= text_field_tag 'destination_address[address_string]', @destination_address ? @destination_address.address_string : "", placeholder: "Destination" %>
                          </div>
                        </div>
                      </div>

                      <div class="col-lg-2 col-lg-offset-5">
                        <%= button_to "Search", trips_search_path, class: "btn btn-default btn-lg" %>
                      </div> 

                    <% end %> 
                </div>
               
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="container content-section text-center">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2">
                <h2>Contact Caravan</h2>
                  <p>Feel free to email us to provide some feedback on our services, give us suggestions for new features, or just to say hello!</p>
                <p><a href="mailto:feedback@caravan.com">feedback@caravan.com</a>
                </p>
                <ul class="list-inline banner-social-buttons">
                    <li>
                        <a href="https://twitter.com/" class="btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Twitter</span></a>
                    </li>
                    <li>
                        <a href="https://github.com/IronSummitMedia/" class="btn btn-default btn-lg"><i class="fa fa-github fa-fw"></i> <span class="network-name">Github</span></a>
                    </li>
                    <li>
                        <a href="https://plus.google.com/" class="btn btn-default btn-lg"><i class="fa fa-google-plus fa-fw"></i> <span class="network-name">Google+</span></a>
                    </li>
                </ul>
            </div>
        </div>
    </section>
    <footer>
        <div class="container text-center">
            <p>Copyright Â© Caravan 2015</p>
        </div>
    </footer>
</body>