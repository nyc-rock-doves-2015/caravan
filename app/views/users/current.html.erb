<div class="row profile">
<div class="col-md-3">
	<div class="profile-sidebar">
		<!-- SIDEBAR USERPIC -->
		<div class="profile-userpic">
			<img src="http://spacelist.ca/assets/v2/placeholder-user.jpg" class="img-responsive" alt="">

      <!-- https://s3.amazonaws.com/caravan1/site+resources/images/placeholder-user.jpg -->
		</div>
		<!-- END SIDEBAR USERPIC -->
		<!-- SIDEBAR USER TITLE -->
		<div class="profile-usertitle">
			<div class="profile-usertitle-name">
				<%=@user.username %>
			</div>
		</div>
		<!-- END SIDEBAR USER TITLE -->
		<!-- SIDEBAR BUTTONS -->
		<div class="profile-userbuttons">
      <%= link_to "New Trip", new_trip_path, class: "btn btn-primary btn-sm"%>
      <%= link_to "New Parcel", new_parcel_path, class: "btn btn-info btn-sm" %>
		</div>
		<!-- END SIDEBAR BUTTONS -->
		<!-- SIDEBAR MENU -->
		<div class="profile-usermenu">
			<ul class="nav">
				<li class="active">
					<a href="#">
					<i class="glyphicon glyphicon-home"></i>
					Overview </a>
				</li>
				<li>
					<a href="#">
					<i class="glyphicon glyphicon-user"></i>
					Account Settings </a>
				</li>
				<li>
					<%= link_to profile_history_path, id: "history_tab" do %>
					<i class="glyphicon glyphicon-ok"></i> History
					<% end %>
				</li>
				<li>1
          <a data-toggle="tab" href="#sectionB" aria-expanded="false" id="trips_tab"><i class="glyphicon glyphicon-flag"></i> Trips</a>
				</li>
				<li>
					<a data-toggle="tab" href="#sectionA" id="parcels_tab"><i class="glyphicon glyphicon-flag"></i> Parcels</a>
				</li>
			</ul>
		</div>
		<!-- END MENU -->
	</div>
</div>
<div class="col-md-9">
  <div class="profile-content">
    <ul class="nav nav-pills">
        <li class="active"><a data-toggle="tab" href="#sectionA" class="parcels_tab">Your Parcels</a></li>
        <li><a data-toggle="tab" href="#sectionB" class="trips_tab">Your Trips</a></li>
        <li><a data-toggle="tab" href="#sectionC" class="inbox_tab">Inbox (<%= @num_messages %>)</a></li>
    </ul>
    <div id="tab-headers" class="tab-content">
        <div id="sectionA" class="tab-pane fade in active">
          <%= render partial: 'parcels/current_user' %>
        </div>
        <div id="sectionB" class="tab-pane fade active">
          <%= render partial: 'trips/current_user' %>
        </div>
        <div id="sectionC" class="tab-pane fade">
          <%= render partial: 'messages/current_user' %>
        </div>
    </div>
   </div>
</div>
</div>
